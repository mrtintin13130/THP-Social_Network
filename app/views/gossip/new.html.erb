<html>
<body>
	<div class="container">
		<div class="row">
			<div class="col">
			</div>
			<div class="col">
				<%= form_for @gossip, url: {action: "create"} do |gossip| %>						
				<div class="form-group">
					<label for="Title">Title</label>
					<%= gossip.text_field :title, class: "form-control", placeholder: "Enter gossip title", name: "title" %>
				</div>
				<div class="form-group">
					<label for="Content">Content</label>
					<%= gossip.text_area :content, class: "form-control", placeholder: "Enter content", name: "content" %>
				</div>
				<center><%= gossip.submit "Submit", class: "btn btn-primary" %></center>
				<% end %>
			</form>
		</div>
		<div class="col">
		</div>
	</div>
</div>

</body>
</html>
